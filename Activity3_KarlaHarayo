<body>
    <div class="container">
        <h1>JavaScript Practice</h1>
        
        <!-- Alert section -->
        <div class="section">
            <h2>Alert</h2>
            <button onclick="showAlert()">Click me</button>
        </div>
        
        <!-- Input section -->
        <div class="section">
            <h2>Text display</h2>
            <input type="text" id="textInput" placeholder="Type something">
            <button onclick="displayText()">Show text</button>
            <div id="output">Your text will appear here</div>
            <div class="note" id="feedback"></div>
        </div>
        
        <!-- Hover section -->
        <div class="section">
            <h2>Hover effect</h2>
            <div id="hoverText">Hover over this</div>
        </div>
        
        <footer>
            simple interactive demo · centered
        </footer>
    </div>

    <script>
        // Alert function
        function showAlert() {
            alert("Hello!");
        }

        // Display input text
        function displayText() {
            let input = document.getElementById("textInput");
            let output = document.getElementById("output");
            let feedback = document.getElementById("feedback");
            let text = input.value;
            
            if (text.trim() === "") {
                output.innerHTML = "Please enter some text";
                feedback.innerHTML = "input was empty";
            } else {
                output.innerHTML = text;
                feedback.innerHTML = "text updated";
                input.value = "";
            }
        }

        // Enter key support
        document.getElementById("textInput").addEventListener("keypress", function(e) {
            if (e.key === "Enter") {
                displayText();
            }
        });

        // Hover effect
        let hoverEl = document.getElementById("hoverText");
        
        hoverEl.onmouseover = function() {
            this.style.background = "#2c3e50";
            this.style.color = "white";
        };
        
        hoverEl.onmouseout = function() {
            this.style.background = "#edf2f7";
            this.style.color = "#2c3e50";
        };
    </script>
