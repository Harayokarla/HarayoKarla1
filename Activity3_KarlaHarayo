            Try: student / demo
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const colorOptions = document.querySelectorAll('.color-option');
            const colorPicker = document.querySelector('.color-picker');
            const body = document.body;
            const container = document.querySelector('.container');
            const infoBox = document.querySelector('.info-box');
            const title = document.querySelector('h1');
            const subtitle = document.querySelector('.subtitle');
            const labels = document.querySelectorAll('.label');
            const values = document.querySelectorAll('.value');
            const demoText = document.querySelector('.demo-text');
            const btnPrimary = document.querySelector('.btn-primary');
            
            let isDragging = false;
            let currentOffsetX = 0;
            let currentOffsetY = 0;
            
            // Initialize color picker position
            colorPicker.style.left = 'calc(100% - 80px)';
            colorPicker.style.top = '20px';
            
            // Make color picker draggable
            colorPicker.addEventListener('mousedown', startDragging);
            colorPicker.addEventListener('touchstart', startDragging);
            
            document.addEventListener('mousemove', drag);
            document.addEventListener('touchmove', drag);
            document.addEventListener('mouseup', stopDragging);
            document.addEventListener('touchend', stopDragging);
            
            function startDragging(e) {
                isDragging = true;
                colorPicker.classList.add('active');
                
                if (e.type === 'touchstart') {
                    e.preventDefault();
                }
            }
            
            function drag(e) {
                if (!isDragging) return;
                
                e.preventDefault();
                
                let clientX, clientY;
                if (e.type === 'touchmove') {
                    clientX = e.touches[0].clientX;
                    clientY = e.touches[0].clientY;
                } else {
                    clientX = e.clientX;
                    clientY = e.clientY;
                }
                
                // Get container position
                const containerRect = container.getBoundingClientRect();
                
                // Calculate position relative to container
                const x = clientX - containerRect.left - colorPicker.offsetWidth / 2;
                const y = clientY - containerRect.top - colorPicker.offsetHeight / 2;
                
                // Constrain within container bounds
                const maxX = containerRect.width - colorPicker.offsetWidth;
                const maxY = containerRect.height - colorPicker.offsetHeight;
                
                const boundedX = Math.max(0, Math.min(x, maxX));
                const boundedY = Math.max(0, Math.min(y, maxY));
                
                colorPicker.style.left = boundedX + 'px';
                colorPicker.style.top = boundedY + 'px';
            }
            
            function stopDragging() {
                isDragging = false;
                colorPicker.classList.remove('active');
            }
            
            // Color picker click handler
            colorPicker.addEventListener('click', function() {
                if (isDragging) return; // Don't trigger click if we were dragging
                
                // Cycle through colors
                const colors = [
                    { bg: '#2b6cb0', container: '#f8f9fa' },
                    { bg: '#2d3748', container: '#e2e8f0' },
                    { bg: '#805ad5', container: '#faf5ff' },
                    { bg: '#d53f8c', container: '#fff5f7' },
                    { bg: '#38a169', container: '#f0fff4' },
                    { bg: '#dd6b20', container: '#fffaf0' }
                ];
                
                // Get current color
                const currentColor = getComputedStyle(colorPicker).backgroundColor;
                const rgb = currentColor.match(/\d+/g);
                
                // Convert to hex
                let currentHex = rgbToHex(parseInt(rgb[0]), parseInt(rgb[1]), parseInt(rgb[2]));
                
                // Find current color index
                let currentIndex = colors.findIndex(color => color.bg.toLowerCase() === currentHex.toLowerCase());
                
                // Get next color
                const nextIndex = (currentIndex + 1) % colors.length;
                const nextColor = colors[nextIndex];
                
                // Update color picker
                colorPicker.style.background = nextColor.bg;
                
                // Apply theme
                applyTheme(nextColor.bg, nextColor.container);
                
                // Update active color option
                colorOptions.forEach((option, index) => {
                    option.classList.remove('active');
                    if (index === nextIndex) {
                        option.classList.add('active');
                    }
                });
            });
            
            // Original color option click handlers
            colorOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove active class from all options
                    colorOptions.forEach(opt => opt.classList.remove('active'));
                    
                    // Add active class to clicked option
                    this.classList.add('active');
                    
                    // Get color data
                    const bgColor = this.getAttribute('data-bg');
                    const containerColor = this.getAttribute('data-container');
                    
                    // Apply theme
                    applyTheme(bgColor, containerColor);
                    
                    // Update color picker to match
                    colorPicker.style.background = bgColor;
                });
            });
            
            // Function to apply theme
            function applyTheme(bgColor, containerColor) {
                // Change background gradient
                body.style.background = `linear-gradient(135deg, ${bgColor} 0%, ${darkenColor(bgColor, 20)} 100%)`;
                
                // Change container background
                container.style.background = containerColor;
                infoBox.style.background = lightenColor(containerColor, 5);
                
                // Update button color to match theme
                btnPrimary.style.background = bgColor;
                btnPrimary.style.boxShadow = `0 4px 15px rgba(${hexToRgb(bgColor)}, 0.4)`;
            }
            
            // Helper function to convert RGB to hex
            function rgbToHex(r, g, b) {
                return "#" + ((1 << 24) + (r << 16) + (g << 8) + b).toString(16).slice(1);
            }
            
            // Helper function to darken a hex color
            function darkenColor(hex, percent) {
                let r = parseInt(hex.substring(1, 3), 16);
                let g = parseInt(hex.substring(3, 5), 16);
                let b = parseInt(hex.substring(5, 7), 16);
                
                r = Math.floor(r * (100 - percent) / 100);
                g = Math.floor(g * (100 - percent) / 100);
                b = Math.floor(b * (100 - percent) / 100);
                
                return `#${r.toString(16).padStart(2, '0')}${g.toString(16).padStart(2, '0')}${b.toString(16).padStart(2, '0')}`;
            }
            
            // Helper function to lighten a hex color
            function lightenColor(hex, percent) {
                let r = parseInt(hex.substring(1, 3), 16);
                let g = parseInt(hex.substring(3, 5), 16);
                let b = parseInt(hex.substring(5, 7), 16);
                
                r = Math.min(255, Math.floor(r + (255 - r) * percent / 100));
                g = Math.min(255, Math.floor(g + (255 - g) * percent / 100));
                b = Math.min(255, Math.floor(b + (255 - b) * percent / 100));
                
                return `#${r.toString(16).padStart(2, '0')}${g.toString(16).padStart(2, '0')}${b.toString(16).padStart(2, '0')}`;
            }
            
            // Helper function to convert hex to RGB
            function hexToRgb(hex) {
                const r = parseInt(hex.substring(1, 3), 16);
                const g = parseInt(hex.substring(3, 5), 16);
                const b = parseInt(hex.substring(5, 7), 16);
                return `${r}, ${g}, ${b}`;
            }
            
            // Prevent context menu on color picker
            colorPicker.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                return false;
            });
        });
    </script>
</body>
</html>
